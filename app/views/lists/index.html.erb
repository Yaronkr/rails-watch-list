<nav class="navbar navbar-light bg-light d-flex justify-content-between">
  <a class="navbar-brand" href="#">Navbar</a>
  <div>
   <%= link_to "My Lists",lists_path, class: "navbar-brand"%>
   <%= link_to "New List",new_list_path, class: "navbar-brand"%>
  </div>
</nav>

<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
      <% if  (list.photo.key !=nil)%>
        <td><%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %></td>
      <% end %>
        <td><%= list.name %></td>
        <td><%= link_to "See details",list, class: "btn btn-primary"%></td>
        <td><%= link_to "Delete #{list.name}",
            list_path(list),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => 'btn btn-danger'%>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

