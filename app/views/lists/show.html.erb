<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 800, crop: :fill %>');">
  <div class="container">
    <h1><strong>Movies</strong></h1>
    <p><%= @list.name %></p>
    <div class="d-flex justify-content-center my-3">
      <%= link_to "Add movie",new_list_bookmark_path(@list), class: "btn btn-success"%>
      <%= link_to "Go Back",lists_path, class: "btn btn-primary"%>
    </div>
    <div class="d-flex flex-row justify-content-center">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card mx-2" style="width: 18rem;">
          <img class="card-img-top" src=<%=bookmark.movie.poster_url%> alt="Card image cap">
          <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.rating %></p>
          </div>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <div  class="d-flex justify-content-between">
            <%= link_to "Delete",
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" }, :class => 'btn btn-danger'%>
              <p class="card-text"><%=  @list.bookmarks.first.comment %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
